rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection: users/{userId}
    match /users/{userId} {
      // Users can read and write their own user document
      allow read, write: if isOwner(userId);
    }
    
    // Carts collection: carts/{userId}/items/{itemId}
    match /carts/{userId}/items/{itemId} {
      // Users can read, create, update, and delete items in their own cart
      allow read, create, update, delete: if isOwner(userId);
    }
    
    // Favorites collection: favorites/{userId}/items/{itemId}
    match /favorites/{userId}/items/{itemId} {
      // Users can read, create, update, and delete items in their own favorites
      allow read, create, update, delete: if isOwner(userId);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}